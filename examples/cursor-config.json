{
  "$schema": "https://cursor.sh/schemas/mcp-servers.json",
  "mcpServers": {
    "mcp-gateway": {
      "type": "http",
      "url": "http://localhost:3010/mcp",
      "description": "MCP Gateway - aggregates multiple MCP servers"
    },
    "mcp-gateway-sse": {
      "type": "sse",
      "url": "http://localhost:3010/sse",
      "description": "MCP Gateway via SSE (alternative transport)"
    },
    "mcp-gateway-with-auth": {
      "type": "http",
      "url": "http://localhost:3010/mcp",
      "headers": {
        "Authorization": "Bearer your-api-key-here"
      },
      "description": "MCP Gateway with API key authentication"
    }
  }
}

